{
  "name": "provenant",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.30.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "pnpm --filter api prisma generate",
    "db:migrate": "pnpm --filter api prisma migrate dev",
    "db:push": "pnpm --filter api prisma db push",
    "db:studio": "pnpm --filter api prisma studio",
    "db:use-postgres": "cp apps/api/prisma/schema.postgres.prisma apps/api/prisma/schema.prisma && pnpm db:generate",
    "db:use-sqlite": "cp apps/api/prisma/schema.sqlite.prisma apps/api/prisma/schema.prisma && pnpm db:generate"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}
